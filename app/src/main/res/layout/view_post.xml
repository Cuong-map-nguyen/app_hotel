<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewHinh"
        android:layout_width="338dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="23dp" />

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewHinh"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Tiêu đề"
        android:textColor="#ac0000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNoiDung"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTieuDe"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        android:textColor="#8f8e8e"
        android:text="Nội dung" />

    <TextView
        android:id="@+id/txtadmin"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNoiDung"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="63dp"
        android:layout_toStartOf="@+id/txtcreate"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtcreate"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNoiDung"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000" />

</RelativeLayout>